<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="polls">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>dat250.models.User</class>
        <class>dat250.models.Poll</class>
        <class>dat250.models.Vote</class>
        <class>dat250.models.VoteOption</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:file:./data/pollsdb"/>
            <property name="jakarta.persistence.jdbc.user" value="ole"/>
            <property name="jakarta.persistence.jdbc.password" value="pass"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>


            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>